<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <com.wachat.customViews.ChatTextView
        android:id="@+id/tv_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/app_Brown"
        android:textSize="@dimen/text_size_medium"
        wachat:customFont="@string/font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/view_gray_color" />

    <!-- <com.wachat.customViews.ChatTextView
         android:id="@+id/tv_code"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:padding="10dp"
         android:textColor="@color/app_Brown"
         android:textSize="@dimen/text_size_small"
         wachat:customFont="@string/font" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.wachat.customViews.ChatEditText
                android:id="@+id/et1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:paddingBottom="@dimen/p_chat_top_rel_tb"
                android:background="@drawable/authen_edit_back"
                android:textCursorDrawable="@null"
                wachat:customFont="@string/font" />

            <com.wachat.customViews.ChatEditText
                android:id="@+id/et2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:paddingBottom="@dimen/p_chat_top_rel_tb"
                android:background="@drawable/authen_edit_back"
                android:textCursorDrawable="@null"
                wachat:customFont="@string/font" />

            <com.wachat.customViews.ChatEditText
                android:id="@+id/et3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:paddingBottom="@dimen/p_chat_top_rel_tb"
                android:background="@drawable/authen_edit_back"
                android:textCursorDrawable="@null"
                android:singleLine="true"



                wachat:customFont="@string/font" />

            <com.wachat.customViews.ChatEditText
                android:id="@+id/et4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:paddingBottom="@dimen/p_chat_top_rel_tb"
                android:background="@drawable/authen_edit_back"
                android:textCursorDrawable="@null"
                wachat:customFont="@string/font" />

            <com.wachat.customViews.ChatEditText
                android:id="@+id/et5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:paddingBottom="@dimen/p_chat_top_rel_tb"
                android:background="@drawable/authen_edit_back"
                android:textCursorDrawable="@null"
                wachat:customFont="@string/font" />

            <com.wachat.customViews.ChatEditText
                android:id="@+id/et6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:paddingBottom="@dimen/p_chat_top_rel_tb"
                android:background="@drawable/authen_edit_back"
                android:textCursorDrawable="@null"
                wachat:customFont="@string/font" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_gray_color" />


    <com.wachat.customViews.ChatTextView
        android:id="@+id/tv_reEnterPh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="@string/reset_ph_no"
        android:textColor="@color/app_Brown"
        android:textSize="@dimen/text_size_medium"
        wachat:customFont="@string/font" />

    <com.wachat.customViews.ChatTextView
        android:id="@+id/tv_resendOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="@string/resend_code"
        android:textColor="@color/app_Brown"
        android:textSize="@dimen/text_size_medium"
        wachat:customFont="@string/font" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wachat.customViews.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndetermininate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@color/app_Brown" />
    </RelativeLayout>
</LinearLayout>
