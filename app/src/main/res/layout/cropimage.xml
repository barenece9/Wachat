<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <view
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        class="com.wachat.activity.crop.CropImageView"
        android:background="#55000000" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/app_Brown"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/rotateLeft"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_rotate_left" />

            <View
                android:layout_width="50dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/rotateRight"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_rotate_right" />
        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/topbtn_click_change"
            android:text="SAVE"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/discard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/closemenu_click_change"
            android:textColor="#FFF" />
    </RelativeLayout>

</LinearLayout>