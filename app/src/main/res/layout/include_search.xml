<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_find_people_search_bar"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_find_people_search_icon" />

    <com.wachat.customViews.ChatEditText
        android:id="@+id/et_search_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/iv_cross"
        android:layout_toRightOf="@+id/iv_search"
        android:background="@null"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:imeOptions="actionSearch"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"
        wachat:customFont="@string/font"/>

    <ImageView
        android:id="@+id/iv_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:visibility="visible"
        android:src="@drawable/ic_find_people_close_icon" />


</RelativeLayout>